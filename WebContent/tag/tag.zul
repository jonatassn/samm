<?page title="Cadastrar Usu�rio" contentType="text/html;charset=UTF-8"?>
<?init class="br.com.jonatassn.samm.service.AuthenticationInit" ?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:n="native">
	<window style="margin-top: 100px;" id="janela"
			border="normal" 
			popup="true" 
			sizable="false" 
			closable="true" 
			width="750px" 
			viewModel="@id('vm') @init('br.com.jonatassn.samm.controller.tag.TagVM')">
		<div style="top: 16px;  margin-bottom: 10px;" class="app-page-title">
	        <div class="page-title-wrapper">
	            <div class="page-title-heading">
	                <div class="page-title-icon">
	                    <n:i class="fa fa-users">
	                    </n:i>
	                </div>
	                <label value="Cadastro de Tags" />
	            </div>
	        </div>
	    </div>
	    
		<div class="row">
			<div class="form-group">
				<div class="col-sm-6">
					<label value="Código Hexa:" />
					<textbox class="form-control" value="@bind(vm.formTag.codigoHexadecimal) @save(vm.formTag.codigoHexadecimal, before='salvar')" constraint="no empty: O campo código não pode estar vazio" />
				</div>
				<div class="col-sm-6">
					<label value="Frequência:" />
					<textbox class="form-control" value="@bind(vm.formTag.frequencia)" />
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="form-group">
				<div class="col-sm-6">
					<label value="Ativo:" />
					<checkbox hflex="1" checked="@bind(vm.formTag.isAtivo)" />
				</div>
			</div>
		</div>
		
		<div class="d-flex justify-content-center">
			<button class="btn btn-sm btn-secondary" iconSclass="fa fa-ban" label="Cancelar" onClick="@command('cancelar', janela=janela)"/>
			<button class="btn btn-sm btn-success" iconSclass="fa fa-check" label="Salvar" onClick="@command('salvar', janela=janela)"/>
		</div>
	</window>
</zk> 